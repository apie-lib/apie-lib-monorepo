{
    "name": "apie/apie-lib",
    "authors": [
        {
            "name": "Pieter Jordaan",
            "email": "pieter_jordaan@hotmail.com"
        }
    ],
    "description": "Monorepo of the Apie library",
    "type": "project",
    "license": "MIT",
    "require": {
        "cebe/php-openapi": "^1.7",
        "fakerphp/faker": "1.19",
        "niklongstone/regex-reverse": "^0.4.0",
        "php": ">=8.1",
        "ramsey/uuid": "^4.3.1"
    },
    "config": {
        "lock": false
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.3",
        "phpunit/phpunit": "^9.5",
        "symfony/finder": "6.*",
        "symfony/phpunit-bridge": "6.*",
        "symplify/monorepo-builder": "10.2.7"
    },
    "autoload": {
        "psr-4": {
            "Apie\\CommonValueObjects\\": "packages/common-value-objects/src/",
            "Apie\\CompositeValueObject\\": "packages/composite-value-object/src/",
            "Apie\\CompositeValueObjects\\": "packages/composite-value-objects/src/",
            "Apie\\Core\\": "packages/core/src/",
            "Apie\\DateValueObjects\\": "packages/date-value-objects/src/",
            "Apie\\DateformatToRegex\\": "packages/dateformat-to-regex/src/",
            "Apie\\Faker\\": "packages/faker/src/",
            "Apie\\Fixtures\\": "packages/fixtures/src/",
            "Apie\\SchemaGenerator\\": "packages/schema-generator/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apie\\Tests\\CommonValueObjects\\": "packages/common-value-objects/tests/",
            "Apie\\Tests\\CompositeValueObject\\": "packages/composite-value-object/tests/",
            "Apie\\Tests\\CompositeValueObjects\\": "packages/composite-value-objects/tests/",
            "Apie\\Tests\\Core\\": "packages/core/tests/",
            "Apie\\Tests\\DateValueObjects\\": "packages/date-value-objects/tests/",
            "Apie\\Tests\\DateformatToRegex\\": "packages/dateformat-to-regex/tests/",
            "Apie\\Tests\\Faker\\": "packages/faker/tests/",
            "Apie\\Tests\\Fixtures\\": "packages/fixtures/tests/",
            "Apie\\Tests\\SchemaGenerator\\": "packages/schema-generator/tests/"
        }
    },
    "replace": {
        "apie/common-value-objects": "self.version",
        "apie/composite-value-object": "self.version",
        "apie/composite-value-objects": "self.version",
        "apie/core": "*",
        "apie/date-value-objects": "self.version",
        "apie/dateformat-to-regex": "self.version",
        "apie/faker": "self.version",
        "apie/fixtures": "self.version",
        "apie/schema-generator": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
