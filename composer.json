{
    "name": "apie/apie-lib",
    "authors": [
        {
            "name": "Pieter Jordaan",
            "email": "pieter_jordaan@hotmail.com"
        }
    ],
    "description": "Monorepo of the Apie library",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.3",
        "phpunit/phpunit": "^9.5",
        "symfony/finder": "6.*",
        "symfony/phpunit-bridge": "6.*",
        "symplify/monorepo-builder": "<version>"
    },
    "autoload": {
        "psr-4": {
            "Apie\\Core\\": "packages/core/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apie\\Tests\\Core\\": "packages/core/tests/"
        }
    },
    "replace": {
        "apie/core": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
