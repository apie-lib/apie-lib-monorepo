<apie-single-input class="unhandled-single-input" label="{{ translate(property('label')) }}" types="{{ property('types').toArray() | join(',') }}" name="{{ property('name') }}"></apie-single-input>
<apie-script>
((elm) => {
    elm.classList.remove('unhandled-single-input');
    elm.inputOptions = {{ property('options') | json_encode | replace({'<': '&lt;'}) | raw }}
})(document.querySelector('apie-single-input.unhandled-single-input'));
</apie-script>