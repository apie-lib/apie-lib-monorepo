<apie-single-input class="unhandled-single-input" label="{{ translate(property('label')) }}" types="checkbox,select" name="{{ property('name') }}"></apie-single-input>
<apie-script>
((elm) => {
    elm.classList.remove('unhandled-single-input');
    elm.inputOptions = {
      options = [
        {
          name: {{ translate(property('types.boolean.true')  | json_encode | replace({'<': '&lt;'}) | raw}},
          value: true,
        },
        {
          name: {{ translate(property('types.boolean.false')  | json_encode | replace({'<': '&lt;'}) | raw}},
          value: false,
        }
      ]
    }
})(document.querySelector('apie-single-input.unhandled-single-input'));
</apie-script>