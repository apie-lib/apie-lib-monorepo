<apie-form-group class="{{ property('extraClass') | default('child-form-group') }}" name="{{ property('groupName') }}" style="box-shadow: var(--gr-shadow-small); width: 100%">
  {% for key in property('keys') %}
    {{ component(key) }}
  {% endfor %}
</apie-form-group>
{%- if property('validationError') -%}
  <apie-serverside-error>{{ property('validationError') }}</apie-serverside-error>
{%- else -%}
  {%- for key,description in property('validationErrors') -%}
    <apie-serverside-error>{{ description }}</apie-serverside-error>
  {%- endfor -%}
{%- endif -%}